{
  "name": "structured-openapi-schema",
  "description": "example project for structured openapi schema",
  "author": "t2h5",
  "scripts": {
    "check-yml": "prettier --check '**/*.yml'",
    "format-yml": "prettier --write '**/*.yml'",
    "validate-root-schema": "spectral lint root.yml",
    "validate-generated-schema": "spectral lint generated/openapi.json",
    "run-generator": "openapi-generator-cli generate -g openapi -i root.yml -o generated",
    "markdown": "openapi-generator-cli generate -g markdown -i root.yml -o docs",
    "validate": "npm-run-all -s validate-root-schema validate-generated-schema",
    "generate": "npm-run-all -s run-generator markdown validate-generated-schema",
    "watch": "chokidar 'root.yml' '**/*.yml' -c 'yarn generate' --initial",
    "mock": "prism mock -d -p 13000 ./generated/openapi.json"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.0.3",
    "@stoplight/prism-cli": "^4.1.0",
    "@stoplight/spectral": "^5.6.0",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2"
  }
}
